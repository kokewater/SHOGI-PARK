<div id="image-container">
  <div id="theTarget">
    <div class="top-image1"></div>
    <div class="top-image2"></div>
    <div class="top-image3"></div>
    <div class="top-image4"></div>
  </div>
</div>
<div>

<div class="top-questions">
  <h1>新着質問</h1>
  <div class="table-two-rows">
    <% @questions.each do |question| %>
      <div class="block-two-rows">
        <%= link_to question_path(question) do %>
          <%= attachment_image_tag question, :image, width: "100%", fallback: "no_image.png" %>
        <% end %>
        <div class="list-group" style="list-style: none;">
          <li>タイトル： <%= question.title %></li>
          <li>
            <%= link_to user_path(question.user) do %>
  						<%= attachment_image_tag(question.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.png") %>
  						<%= question.user.name %>さん
  					<% end %>
  			  </li>
        </div>
      </div>
    <% end %>
  </div>
</div>