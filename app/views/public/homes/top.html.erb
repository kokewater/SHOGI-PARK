<div id="image-container">
  <div id="theTarget">
    <div class="top-image1"></div>
    <div class="top-image2"></div>
    <div class="top-image3"></div>
    <div class="top-image4"></div>
  </div>
</div>
<div>

<div class="text-center">
  <h2>SHOGI-PARKとは</h2>
  <p class="strong-text">
    将棋に特化したQ＆Aサイトです。</br>
    掲示板で情報を収集することもできます。
  </p>
  <%= link_to '詳しくはこちら', about_path, class: "btn btn-yellow" %>
  <%= link_to '新規登録はこちら', new_user_registration_path, class: "btn btn-green" %>
</div>

<div class="top-questions">
  <h2>新着質問</h2>
  <% @questions.each do |question| %>
    <div class="row block-two-rows">
      <div class="col-md-6">
        <%= link_to question_path(question) do %>
          <%= attachment_image_tag question, :image, width: "100%", fallback: "no_image.png", class: "question-image-circle" %>
        <% end %>
      </div>
      <div class="col-md-6 list-unstyled question-index-list">
        <li>タイトル： <%= question.title %></li>
        <%= link_to user_path(question.user) do %>
					<li><%= attachment_image_tag(question.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.png", class: "user-image-circle") %></li>
					<li><%= question.user.name %>さん</li>
				<% end %>
      </div>
    </div>
  <% end %>
</div>