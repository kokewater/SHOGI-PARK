<% question.answers.each do |answer| %>
  <li class="answer-single">
    <div>
      <%= link_to user_path(answer.user.id) do %>
        <%= attachment_image_tag(answer.user, :profile_image, :fill, 60, 60, fallback: "no-image-icon.png", size: '60x60') %>
        <%= answer.user.name %>さん
      <% end %>
    </div>
    <div class="answer-text">
      <%= answer.answer %>
    </div>
    <% if answer.user == current_user %>
      <%= link_to "コメントを削除", question_answer_path(question, answer), method: :delete, class: "btn btn-danger btn-xs pull-right", remote: true %>
    <% end %>
  </li>
<% end %>