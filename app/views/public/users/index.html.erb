<div class="container">
  <div class="row">
    <h2>ユーザー一覧(全<%= @users.count %>人)</h2>
    <div class="col-md-3">
      <%= render 'public/questions/left_column', genres: @genres %>
    </div>
    <div class="col-md-9">
      <div class="table-two-rows">
        <% @users.each do |user| %>
          <div class="block-two-rows">
            <%= user.id %>
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.png") %>
              <%= user.name %>
            <% end %>

            <% if current_user != user %>
              <% if user.followed_by?(current_user) %>
                <p><%=link_to "フォロー済み", user_relationship_path(user.id, current_user.id), method: :delete %></p>
              <% else %>
                <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
              <% end %>
            <% end %>
          </div>
        <% end %>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>