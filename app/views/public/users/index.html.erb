<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render 'public/questions/left_column', genres: @genres %>
    </div>
    <div class="col-sm-9">
      <h2>ユーザー一覧(全<%= @users.count %>人)</h2>
      <div class="table-two-rows">
        <% @users.each do |user| %>
          <div class="block-two-rows">
            <%= user.id %>
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.png") %>
              <%= user.name %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>