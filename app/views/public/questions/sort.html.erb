<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <div class="list-group">
        <h2>ジャンル検索</h2>
        <% @genres.each do |genre| %>
          <li>
            <%= link_to genre.name, sort_questions_path(genre_id: genre.id) %>
          </li>
        <% end %>
      </div>
      <div>
        <%= link_to '質問する！！', new_question_path, class: "btn btn-info btn-lg new-question-button" %>
      </div>
      <div>
        <%= link_to '掲示板へ！！', post_messages_path, class: "btn btn-success btn-lg" %>
      </div>
    </div>
    <div class="col-sm-9">
      <h2><%= @genre.name %>一覧(全<%= @questions.count %>件)</h2>
      <div class="row table-two-rows">
        <% @questions.each do |question| %>
          <div class="block-two-rows">
            <%= link_to question_path(question) do %>
              <%= attachment_image_tag question, :image, width: "100%", fallback: "no_image.png" %>
            <% end %>
            <div class="list-group" style="list-style: none;">
              <li>タイトル： <%= question.title %></li>
              <li>
                <%= link_to user_path(question.user) do %>
    							<%= attachment_image_tag(question.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.png") %>
    							<%= question.user.name %>さん
    						<% end %>
						  </li>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>