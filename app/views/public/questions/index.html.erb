<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="list-group">
        <h3>ジャンル検索</h3>
        <% @genres.each do |genre| %>
        <li>
          <%= link_to genre.name, sort_questions_path(genre_id: genre.id) %>
        </li>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <h2>質問一覧(全<%= @questions.count %>件)</h2>
      <div class="row">
        <% @questions.each do |question| %>
          <div class="col-sm-6">
            <div class="list-group" style="list-style: none;">
              <li><%= question.title %></li>
            </div>
            <%= link_to question_path(question) do %>
              <%= attachment_image_tag question, :image, width: "100%", fallback: "no_image.png" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>