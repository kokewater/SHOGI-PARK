<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render 'public/questions/left_column', genres: @genres %>
    </div>
    <div class="col-sm-9">
      <h2>将棋情報掲示板</h2>
      <table class="table table-striped">
        <% @post_messages.each do |post_message| %>
          <tr>
            <td>
              <%= link_to user_path(post_message.user) do %>
  							<%= attachment_image_tag(post_message.user, :profile_image, :fill, 60, 60, fallback: "no-image-icon.png", size: '60x60') %>
  							<%= post_message.user.name %>
  						<% end %>
            </td>
            <td>
              <%= post_message.message %>
            </td>
          </tr>
        <% end %>
      </table>

      <!--掲示板投稿-->
      <%= form_with model: @post_message, url: post_messages_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :message, "本文" %>
          <%= f.text_area :message, rows: 5, class: "form-control" %>
        </div>

        <div>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>