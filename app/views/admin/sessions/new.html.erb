<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 login-registration-form">
      <h1 class="text-center"><strong>ログイン</strong></h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :メール %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %><br/>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-block btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>