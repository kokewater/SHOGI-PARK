<div class="container">
  <div>
    <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>

      <!--エラー文-->
      <% if @user.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!--投稿画像-->
      <div class="col-sm-6">
        <%= attachment_image_tag(@user, :profile_image, width: "100%", fallback: "no-image-icon.png") %><br>
        <%= f.attachment_field :profile_image %>
      </div>

      <div class="col-sm-6">

        <!--名前-->
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name %><br>
        </div>

        <!--自己紹介-->
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, rows: 5 %><br>
        </div>
        
        <div class="form-group">
          <%= f.label :有効 %><%= f.radio_button :is_deleted, false %>
          <%= f.label :退会済み %><%= f.radio_button :is_deleted, true %>
        </div>

        <%= f.submit "編集する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>